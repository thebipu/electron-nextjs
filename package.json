{
  "name": "electron-nextjs-template",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently -k -r \"npm:dev:next\" \"npm:dev:electron\"",
    "dev:next": "next dev -p 3000",
    "dev:electron": "wait-on tcp:3000 && electron .",
    "build": "next build",
    "start": "cross-env NODE_ENV=production electron .",
    "lint": "echo 'no lint configured'"
  },
  "dependencies": {
    "next": "14.2.8",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.14",
    "autoprefixer": "^10.4.21",
    "concurrently": "9.1.0",
    "cross-env": "7.0.3",
    "electron": "31.3.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.14",
    "wait-on": "7.2.0"
  }
}
